<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="32dp"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.pager.dashboard.OverviewFragment">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue_enabled"
        style="@style/Theme.MyApplication.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/mainContainer"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            style="@style/Theme.MyApplication.ContainerInfo"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:layout_weight="0.5"
            android:layout_height="100dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="24dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/departamento"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="DTI"
                    android:textStyle="bold"
                    android:textColor="@color/gray_text"
                    android:layout_height="wrap_content"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartDepartamento"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/departamento"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="16dp"
            android:elevation="8dp"
            style="@style/Theme.MyApplication.ContainerInfo"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/my_name"
                    android:text="Meus"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart"
                    android:layout_width="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/my_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/legend_container"/>
                <LinearLayout
                    android:id="@+id/legend_container"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:weightSum="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Fechados"
                        android:layout_marginEnd="8dp"
                        android:drawableStart="@drawable/ic_circle"
                        android:maxLines="1"
                        android:textSize="8sp"
                        android:drawableTint="@color/green_ufca"
                        android:drawablePadding="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:text="Reabertos"
                        android:layout_marginEnd="8dp"
                        android:drawablePadding="2dp"
                        android:maxLines="1"
                        android:textSize="8sp"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawableTint="@color/purple_200"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:drawablePadding="2dp"
                        android:textSize="8sp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawableTint="@color/emergency_priority"
                        android:maxLines="1"
                        android:text="Atrasados" />
                    <TextView
                        android:text="Atribuidos"
                        android:layout_marginEnd="8dp"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawableTint="@color/high_priority"
                        android:drawablePadding="2dp"
                        android:textSize="8sp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Abertos"
                        android:layout_marginEnd="8dp"
                        android:drawableStart="@drawable/ic_circle"
                        android:drawableTint="@color/blue_enabled"
                        android:maxLines="1"
                        android:drawablePadding="2dp"
                        android:textSize="8sp"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <include android:id="@+id/included" layout="@layout/error_message"/>

</FrameLayout>